@model UpdateBlogViewModel
@{
    ViewData["Title"] = "Update";
}

<div>
    <h3 class="text-center">Update Blog</h3>
    <form asp-action="update" asp-controller="account" method="post" enctype="multipart/form-data">
        @if (ViewData["Error"] != null)
        {
                        <div asp-validation-summary="All" class="alert-danger text-danger p-4">
                        </div>
        }
        <input type="hidden" asp-for="Id">
        <div class="form-group mt-2">
            <label asp-for="Title">Title</label>
            <input class="form-control" asp-for="Title" placeholder="Enter title">
            <span asp-validation-for="Title" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="Content">Content</label>
            <textarea class="form-control" asp-for="Content" placeholder="Enter content"></textarea>
            <span asp-validation-for="Content" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="CategoryId">Category</label>
            <select class="form-control" asp-for="CategoryId" placeholder="Enter content">
                @foreach (var category in ViewBag.categories)
                {
                            <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="form-text text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="Banner">Select banner image</label>
            <input type="file" class="form-control-file"  accept="image/*" asp-for="Banner">
            <span asp-validation-for="Banner" class="form-text text-danger"></span>
        </div>

        <div class="mt-3 w-100 d-flex align-items-center justify-content-center">
            <button type="submit" class="btn btn-dark">Update</button>
        </div>
    </form>
</div>





