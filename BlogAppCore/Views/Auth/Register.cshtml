@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div>
    <h3 class="text-center">Register</h3>
    <form asp-action="Register" asp-controller="Auth" method="post">
        @if (ViewData["Error"] != null)
        {
            <div asp-validation-summary="All" class="alert-danger text-danger p-4">
            </div>
        }
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input class="form-control" asp-for="Email" placeholder="Enter email">
            <span asp-validation-for="Email" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input class="form-control" asp-for="UserName" placeholder="Enter username">
            <span asp-validation-for="UserName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FullName">Fullname</label>
            <input class="form-control" asp-for="FullName" placeholder="Enter fullname">
            <span asp-validation-for="FullName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" asp-for="Password" placeholder="Enter password">
            <span asp-validation-for="Password" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordAgain">Password again</label>
            <input class="form-control" asp-for="PasswordAgain" placeholder="Enter password again">
            <span asp-validation-for="PasswordAgain" class="form-text text-danger"></span>
        </div>
        <div class="mt-3 w-100 d-flex align-items-center justify-content-center">
            <button type="submit" class="btn btn-dark">Register</button>
        </div>
        <p class="mt-2 text-center">
            Already have an account?
            <a asp-action="Login"> Login</a>
        </p>
    </form>
</div>


