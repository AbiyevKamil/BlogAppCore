@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div>
    <h3 class="text-center">Login</h3>
    <form asp-action="Login" asp-controller="Auth" method="post">
        @if (ViewData["Error"] != null)
        {
                <div asp-validation-summary="All" class="alert-danger text-danger p-4">
                </div>
        }
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input class="form-control" asp-for="Email" placeholder="Enter email">
            <span asp-validation-for="Email" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" asp-for="Password" placeholder="Enter password">
            <span asp-validation-for="Password" class="form-text text-danger"></span>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe">Remember me</label>
        </div>
        <div class="mt-3 w-100 d-flex align-items-center justify-content-center">
            <button type="submit" class="btn btn-dark">Login</button>
        </div>
        <p class="mt-2 text-center">
            Don't you have an account?
            <a asp-action="Register"> Register</a>
        </p>
    </form>
</div>



